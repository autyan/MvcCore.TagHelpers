@model List<TableSampleData>
@addTagHelper *, MvcCore.TagHelpers
@{
    ViewBag.Title = "TableTagHelperSample";
    var query = new TableQuery
    {
        Id = 155555,
        Age = 31,
        Name = "Alex"
    };
}

<div>
    <query-form item-source="@query"></query-form>
    <mvc-table class="table table-bordered table-hover table-striped" item-source="@Model" column-ignore="Id"></mvc-table>
    <mvc-pager pager-take="20" pager-skip="0" pager-totalcount="20000"></mvc-pager>
</div>
